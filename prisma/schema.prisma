generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")     // pooled URL for app/server
  directUrl  = env("DIRECT_URL")       // direct URL for migration/seeding (port 5432)
}


model Camera {
  id        Int       @id @default(autoincrement())
  name      String
  location  String
  incidents Incident[]
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Incident {
  id           Int      @id @default(autoincrement())
  cameraId     Int
  camera       Camera   @relation(fields: [cameraId], references: [id])
  type         String
  tsStart      DateTime
  tsEnd        DateTime
  thumbnailUrl String
  videoUrl     String
  resolved     Boolean  @default(false)
}
